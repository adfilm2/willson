            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13.4dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리트리버 님"
                        android:id="@+id/helper_fragment1_nickName"
                        android:layout_marginRight="5.8dp"
                        android:textSize="14sp"
                        android:lineSpacingExtra="14sp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:fontFamily="@font/nanum_square_l"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(여 / "
                        android:textSize="14sp"
                        android:lineSpacingExtra="14sp"
                        android:textColor="@color/black"
                        android:id="@+id/helper_fragment1_gender"
                        android:textStyle="normal"
                        android:fontFamily="@font/nanum_square_r"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20대 후반)"
                        android:textSize="14sp"
                        android:lineSpacingExtra="14sp"
                        android:textColor="@color/black"
                        android:id="@+id/helper_fragment1_age"
                        android:textStyle="normal"
                        android:fontFamily="@font/nanum_square_r"
                        />


                </LinearLayout>

            </LinearLayout>

