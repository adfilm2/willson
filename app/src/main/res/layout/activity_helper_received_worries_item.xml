    <androidx.cardview.widget.CardView
        android:id="@+id/worries_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/asker_relative"
                android:layout_marginTop="18.2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/helper_request_timerbox"
                        android:gravity="center"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginLeft="8.6dp"
                            android:layout_marginRight="1.8dp"
                            android:src="@drawable/img_timer_yellow" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helper_fragment1_timer"
                            android:text="2:59"
                            android:textSize="16sp"
                            android:textColor="@color/middlePurple"
                            android:layout_marginRight="5.8dp"
                            android:layout_marginVertical="5.8dp"
                            android:fontFamily="@font/nanum_square_b"
                            />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_cancle"
                    android:id="@+id/helper_fragment1_cancle"
                    android:layout_marginRight="15.4dp"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

