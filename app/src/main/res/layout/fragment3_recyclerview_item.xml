<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment3_linear"
    android:orientation="horizontal"
    android:layout_marginBottom="10.7dp"
    android:layout_marginTop="12dp"
    >

    <ImageView
        android:layout_width="57.5dp"
        android:layout_height="57.5dp"
        android:layout_marginLeft="18.2dp"
        android:id="@+id/fragment3_chatImage"
        android:src="@drawable/chat_img_helperprofile"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11.5dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment3_chatTitle"
                android:layout_marginBottom="11.1dp"
                android:text="연남동 전윤한님"
                android:textColor="@color/dark_purple"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment3_chatMessage"
                android:text="메시지"
                android:gravity="start"
                />
        </LinearLayout>

        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/fragment3_chatLastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/grey"
            android:textSize="9sp"
            android:layout_marginRight="19.1dp"
            />
        <ImageView
            android:layout_width="22.1dp"
            android:layout_height="22.1dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fragment3_chatLastTime"
            android:src="@drawable/chat_img_alert"
            android:layout_marginRight="19.1dp"
            android:layout_marginTop="6.7dp"
            />

    </RelativeLayout>
</LinearLayout>
