<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52.8dp"
        android:layout_marginBottom="23dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="21.1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:layout_marginRight="31.4dp"
                android:text="같은 고민을 한
\n헬퍼를 찾았어요!"
                android:textSize="22sp"
                android:textColor="@color/light_purple"
                />
            <ImageView
                android:layout_width="109.4dp"
                android:layout_height="89.3dp"
                android:src="@drawable/request_img_willson"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21.1dp"
            android:layout_marginRight="19.2dp"
            android:orientation="horizontal"
            android:background="@drawable/login_edittext"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.7dp"
                android:layout_marginBottom="8.7dp"
                android:layout_marginLeft="17.3dp"
                android:text="시간 내에 헬퍼를 선택하세요!"
                android:textSize="13sp"
                android:textColor="@color/dark_purple"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timer_layout"
                android:layout_gravity="center"
                android:layout_marginRight="22.3dp"
                >
            <ImageView
                android:layout_width="17.3dp"
                android:layout_height="17.3dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_timer_yellow"
                android:layout_toLeftOf="@+id/fragment2_timer"
                android:layout_centerVertical="true"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment2_timer"
                    android:layout_marginLeft="6.7dp"
                    android:layout_alignParentEnd="true"
                    android:text="4:59"
                    android:textColor="@color/middlepurple"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment2_recyclerview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>