<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_helper_signup_toolbar"
        layout="@layout/toolbar_helper_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45.6dp"
        android:orientation="horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신분증 확인"
        android:textColor="@color/dark_purple"
        android:lineSpacingExtra="14sp"
        android:textSize="18sp"
        android:layout_marginLeft="22.1dp"
        android:layout_marginBottom="18.1dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="22.1dp"
        android:layout_marginRight="22.1dp"
        android:background="@drawable/rounded_corner_radius5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="39.4dp"
                    android:layout_height="31.7dp"
                    android:src="@drawable/helper_signup_btn_camera"
                    android:layout_gravity="center"
                    android:layout_marginTop="16.3dp"
                    android:layout_marginBottom="10.4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/grey"
                    android:lineSpacingExtra="22sp"
                    android:layout_marginBottom="17.9dp"
                    android:layout_gravity="center_horizontal"
                    android:text="본인의 신분증 사진을 올려주세요!"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"

                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호를 작성해주세요"
        android:textColor="@color/dark_purple"
        android:lineSpacingExtra="12sp"
        android:textSize="18sp"
        android:layout_marginLeft="22.1dp"
        android:layout_marginTop="42.6dp"
        android:layout_marginBottom="18.7dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22.1dp"
        android:layout_marginRight="22.1dp"
        >

        <EditText
            android:layout_width="1dp"
            android:layout_height="38.4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_radius5"
            android:hint="010"
            android:freezesText="true"
            android:cursorVisible="false"
            android:singleLine="true"
            android:maxLength="3"
            android:digits="1234567890"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:textColorHint="#bdbdbd"
            android:gravity="center"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/lightPurple"
            android:layout_gravity="center"
            android:layout_weight="0.35"
            android:layout_marginLeft="3.8dp"
            android:layout_marginRight="9.6dp" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="38.4dp"
            android:layout_weight="1.2"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:gravity="center"
            android:background="@drawable/rounded_corner_radius5"
            android:freezesText="true"
            android:cursorVisible="false"
            android:singleLine="true"
            android:maxLength="4"
            android:digits="1234567890"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/lightPurple"
            android:layout_gravity="center"
            android:layout_weight="0.35"
            android:layout_marginLeft="3.8dp"
            android:layout_marginRight="9.6dp"
            />

        <EditText
            android:layout_width="1dp"
            android:layout_height="38.4dp"
            android:layout_weight="1.2"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:gravity="center"
            android:freezesText="true"
            android:cursorVisible="false"
            android:singleLine="true"
            android:maxLength="4"
            android:digits="1234567890"
            android:background="@drawable/rounded_corner_radius5"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소속 이메일을 작성해주세요"
        android:textColor="@color/dark_purple"
        android:lineSpacingExtra="12sp"
        android:textSize="18sp"
        android:layout_marginLeft="22.1dp"
        android:layout_marginTop="44.8dp"
        android:layout_marginBottom="18.5dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="38.4dp"
        android:layout_marginLeft="21.1dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/rounded_corner_radius5"
        android:hint="example@willson.com"
        android:freezesText="true"
        android:singleLine="true"
        android:textSize="13sp"
        android:paddingLeft="10.6dp"
        android:textColorHint="#bdbdbd"
        android:lineSpacingExtra="22sp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_r"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경험과 관련된 링크를 써주세요 (선택사항)"
        android:textColor="@color/dark_purple"
        android:lineSpacingExtra="12sp"
        android:textSize="18sp"
        android:layout_marginLeft="22.1dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="18.3dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="38.4dp"
        android:layout_marginLeft="21.1dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="39.4dp"
        android:background="@drawable/rounded_corner_radius5"
        android:hint="www.example.com"
        android:textSize="13sp"
        android:paddingLeft="10.6dp"
        android:textColorHint="#bdbdbd"
        android:lineSpacingExtra="22sp"
        android:textStyle="normal"
        android:freezesText="true"
        android:singleLine="true"
        android:fontFamily="@font/nanum_square_r"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/list1_btn_next"
                android:layout_width="match_parent"
                android:layout_height="46.1dp"
                android:layout_marginLeft="31.7dp"
                android:layout_marginRight="31.7dp"
                android:layout_marginBottom="32.6dp"
                android:background="@drawable/listnext_btn_selector"
                android:enabled="false"
                android:text="다음"
                android:lineSpacingExtra="12sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:elevation="9dp"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>