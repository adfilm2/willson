<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/activity_list1_course_start_toolbar"
        layout="@layout/toolbar_list"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70.2dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="125.9dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/list_img_category_02_job"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginBottom="45dp"
        android:textColor="@color/darkPurple"
        android:lineSpacingExtra="17sp"
        android:gravity="center_horizontal"
        android:text="진로"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_r"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/darkPurple"
        android:lineSpacingExtra="13sp"
        android:gravity="center_horizontal"
        android:text="알맞은 헬퍼를 찾기 위해 간단한\n고민 리스트를 작성해주세요!"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/its_shadow"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@drawable/gradient_btn_color"
            android:text="시작하기"
            android:paddingTop="14.6dp"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/list1_course_start_btn"
            android:elevation="9dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />
    </LinearLayout>

</LinearLayout>