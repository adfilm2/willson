<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f5f5f5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="141.1dp"
        android:background="@color/white">

        <include
            android:id="@+id/activity_list1_toolbar"
            layout="@layout/toolbar_list" />


        <ProgressBar
            android:id="@+id/toolbar_list_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6.7dp"
            android:layout_marginTop="85.4dp"
            android:progressDrawable="@drawable/list_progressbar"
            android:max="100"
            android:progress="88"
            android:progressTint="@color/lightPurple" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="92.1dp"
            android:layout_height="5dp"
            android:layout_gravity="bottom"
            android:background="@drawable/list_progress_shadow">
        </View>


        <TextView
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="103.7dp"
            android:textSize="15dp"
            android:textColor="@color/darkPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88%" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="174.7dp"
        android:layout_marginLeft="21.1dp"
        android:lineSpacingExtra="10sp"
        android:textColor="@color/darkPurple"
        android:textSize="20sp"
        android:text="윌슨 상담 동의서" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="248.6dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="216.8dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="19.2dp"
            android:paddingTop="21.1dp"
            android:paddingRight="30dp"
            android:text="@string/agreement"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:layout_marginRight="34.6dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/check1"
            android:button="@drawable/register_checkbox_btn"
            android:layout_gravity="center"
            android:layout_marginLeft="35.5dp"
            android:id="@+id/check1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/check1"
            android:layout_gravity="center"
            android:layout_marginRight="34.6dp"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="530dp"
        android:layout_marginRight="34.6dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/register_checkbox_btn"
            android:layout_marginLeft="35.5dp"
            android:id="@+id/check2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/check2"
            android:layout_gravity="center"
            android:layout_marginRight="34.6dp"
            android:textSize="12sp"/>
    </LinearLayout>



</RelativeLayout>