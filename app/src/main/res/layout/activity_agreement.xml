<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f5f5f5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="141.1dp"
        android:background="@color/white">

        <include
            android:id="@+id/activity_list1_toolbar"
            layout="@layout/toolbar_list" />


        <ProgressBar
            android:id="@+id/toolbar_list_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85.4dp"
            android:max="100"
            android:progress="88"
            android:progressTint="@color/lightPurple" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="174.7dp"
        android:layout_marginLeft="21.1dp"
        android:lineSpacingExtra="10sp"
        android:textColor="@color/darkPurple"
        android:textSize="20sp"
        android:text="윌슨 상담 동의서" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="248.6dp"
        android:layout_marginHorizontal="23dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner"
        android:padding="10dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/agreement" />

    </ScrollView>

</RelativeLayout>