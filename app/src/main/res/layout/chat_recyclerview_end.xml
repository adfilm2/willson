<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_radius5"
    android:elevation="2dp"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상담이 종료되었습니다!"
            android:textSize="16sp"
            android:textColor="@color/dark_purple"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="19dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanumsquare_b"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="헬퍼와의 상담을 통해 조금이나마 보탬이 되었나요?\n후기를 남겨서 더 나은 윌슨을 만들어주세요!"
            android:lineSpacingExtra="7.4sp"
            android:layout_marginBottom="24.7dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_square_r"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_button_gradient"
            android:layout_marginHorizontal="24.7dp"
            android:layout_marginBottom="20.2dp"
            android:id="@+id/endMsg_review"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="후기 남기기"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/nanum_square_b"
                android:gravity="center"
                android:layout_marginVertical="9dp"
                />

        </LinearLayout>

    </LinearLayout>
