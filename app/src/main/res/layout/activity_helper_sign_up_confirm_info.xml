<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_helper_signup_confirm_toolbar"
        layout="@layout/toolbar_helper_sign_up_confirm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="본인의 신분증 확인을 위해 주민등록증\n혹은 운전면허증을 준비해주세요."
        android:textColor="@color/dark_purple"
        android:lineSpacingExtra="14sp"
        android:textSize="18sp"
        android:layout_marginLeft="36.8dp"
        android:layout_marginRight="41.2dp"
        android:layout_marginTop="34.6dp"
        android:layout_marginBottom="34.9dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <ImageView
        android:layout_width="219dp"
        android:layout_height="163dp"
        android:layout_marginLeft="71dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/helper_signup_img_id"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="1"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="신분증을 앞면이 보이도록 놓아주세요 어두운\n바닥에 놓으면 더 인식이 잘 됩니다."
            android:textColor="@color/dark_purple"
            android:lineSpacingExtra="14sp"
            android:textSize="18sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="2"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="가이드 영역에 맞추어 반드시 신분증 원본으로\n촬영하세요."
            android:textColor="@color/dark_purple"
            android:lineSpacingExtra="14sp"
            android:textSize="18sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="3"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="빛 반사에 주의하세요. 정보 확인이 어렵거나,\n훼손/ 유효하지 않은 신분증은 거절되거나\n이후 거래가 제한될수 있습니다."
            android:textColor="@color/dark_purple"
            android:lineSpacingExtra="14sp"
            android:textSize="18sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="21.3dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="4"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="제출시 주변 영역도 포함되니 촬영시 주의해\n주세요."
            android:textColor="@color/dark_purple"
            android:lineSpacingExtra="14sp"
            android:textSize="18sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/list1_btn_next"
                android:layout_width="match_parent"
                android:layout_height="46.1dp"
                android:layout_marginLeft="31.7dp"
                android:layout_marginRight="31.7dp"
                android:layout_marginBottom="32.6dp"
                android:background="@drawable/listnext_btn_selector"
                android:enabled="true"
                android:text="다음"
                android:lineSpacingExtra="12sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:elevation="9dp"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>