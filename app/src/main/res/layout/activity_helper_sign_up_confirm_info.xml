<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_list_helper"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="본인의 신분증 확인을 위해 주민등록증\n혹은 운전면허증을 준비해주세요."
        android:textColor="@color/dark_blue"
        android:lineSpacingExtra="14sp"
        android:textSize="18sp"
        android:layout_marginTop="34.6dp"
        android:layout_marginBottom="34.9dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b" />

    <LinearLayout
        android:layout_width="219dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="39.4dp"
            android:layout_height="31.7dp"
            android:src="@drawable/helper_signup_btn_camera"
            android:layout_gravity="center"
            android:layout_marginTop="16.3dp"
            android:layout_marginBottom="10.4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/grey"
            android:lineSpacingExtra="22sp"
            android:layout_marginBottom="17.9dp"
            android:layout_gravity="center_horizontal"
            android:text="본인의 신분증 사진을 올려주세요!"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="신분증을 앞면이 보이도록 놓아주세요.\n어두운 바닥에 놓으면 인식이 더 잘 됩니다."
            android:textColor="@color/dark_blue"
            android:lineSpacingExtra="10sp"
            android:textSize="14sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="2"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="가이드 영역에 맞추어 반드시 신분증 원본으로 촬영하세요."
            android:textColor="@color/dark_blue"
            android:lineSpacingExtra="10sp"
            android:textSize="14sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="3"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="빛 반사에 주의하세요. 정보 확인이 어렵거나, 훼손/유호하지 않은 신분증은 거절되거나 이후 거래가 제한될수 있습니다."
            android:textColor="@color/dark_blue"
            android:lineSpacingExtra="10sp"
            android:textSize="14sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        >

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_purple"
            android:text="4"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="제출시 주변 영역도 포함되니 촬영시 주의해 주세요."
            android:textColor="@color/dark_blue"
            android:lineSpacingExtra="10sp"
            android:textSize="14sp"
            android:layout_marginRight="31dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/signup_info_btn_next"
                android:layout_width="match_parent"
                android:layout_height="46.1dp"
                android:layout_marginLeft="31.7dp"
                android:layout_marginRight="31.7dp"
                android:layout_marginBottom="32.6dp"
                android:background="@drawable/listnext_btn_selector"
                android:enabled="true"
                android:text="다음"
                android:lineSpacingExtra="12sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:elevation="9dp"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>