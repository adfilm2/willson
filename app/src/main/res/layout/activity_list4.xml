<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <include
            android:id="@+id/activity_list1_toolbar"
            layout="@layout/toolbar_list"/>

        <ProgressBar
            android:id="@+id/toolbar_list_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6.7dp"
            android:progressDrawable="@drawable/list_progressbar"
            android:max="100"
            android:progress="37"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_weight="1"
            android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/darkPurple"
            android:lineSpacingExtra="21sp"
            android:gravity="center_horizontal"
            android:text="37%" />
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="54.3dp"
            android:layout_marginLeft="21dp"
            android:textColor="#2c2c4d"
            android:lineSpacingExtra="10sp"
            android:layout_marginBottom="18.9dp"
            android:text="구체적으로 어떤 내용인가요??"
            android:padding="11.4dp"
            />
            -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"

                    android:layout_height="244.8dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="54.3dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_radius5">



                <EditText

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10.5dp"
                    android:layout_marginRight="10.5dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_marginBottom="80dp"
                    android:id="@+id/list4_edittext"
                    android:gravity="left"
                    android:background="@null"
                    android:hint="ex) 연애에 있어서 다양한 고민이 복잡하게 얽혀있어 머릿속이 복잡해요. "
                    >

                </EditText>









                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="11sp"
                    android:text="0"

                    android:id="@+id/textViewCount"
                    android:layout_toLeftOf ="@id/list4_totalbyte"

                    android:layout_alignBottom="@id/list4_totalbyte"/>

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="/300자"
                    android:layout_alignParentRight="true"
                    android:id="@+id/list4_totalbyte"
                    android:layout_marginRight="21dp"



                    />
                </RelativeLayout>










        </LinearLayout>


        <Button
            android:layout_gravity="center"
            android:layout_width="296.6dp"
            android:layout_height="46.1dp"
            android:id="@+id/list4_btn1"
            android:text="다음"
            android:textColor="#ffff"
            android:background="#6262ac"
            android:textSize="14sp"

            android:layout_marginBottom="32.6dp"
            />








</LinearLayout>