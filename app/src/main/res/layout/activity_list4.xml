<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/relative">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141.1dp"
            android:background="@color/white">

                <include
                    android:id="@+id/activity_list1_toolbar"
                    layout="@layout/toolbar_list" />


                <ProgressBar
                    android:id="@+id/toolbar_list_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6.7dp"
                    android:layout_marginTop="85.4dp"
                    android:progressDrawable="@drawable/list_progressbar"
                    android:max="100"
                    android:progress="37"
                    android:progressTint="@color/lightPurple" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="92.1dp"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/list_progress_shadow">
                </View>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="103.7dp"
                    android:textSize="15dp"
                    android:textColor="@color/darkPurple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37%" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="21dp"
            android:textColor="#2c2c4d"
            android:lineSpacingExtra="10sp"
            android:layout_marginBottom="18.9dp"
            android:text="구체적으로 어떤 내용인가요?"

            />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="213.6dp"
                    android:layout_height="244.8dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_radius5">



                <EditText

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10.5dp"
                    android:layout_marginRight="10.5dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_marginBottom="80dp"
                    android:id="@+id/list4_edittext"
                    android:gravity="right"
                    android:background="@null"
                    />



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="11sp"
                    android:text="0"
                    android:id="@+id/textViewCount"
                    android:layout_toLeftOf ="@id/list4_totalbyte"

                    android:layout_alignBottom="@id/list4_totalbyte"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/300자"
                    android:layout_alignParentRight="true"
                    android:id="@+id/list4_totalbyte"



                    />
                </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <Button
            android:id="@+id/list4_btn1"
            android:layout_width="match_parent"
            android:layout_height="46.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="31.7dp"
            android:layout_marginBottom="32.6dp"
            android:background="@drawable/next_btn_darkpurple"
            android:enabled="false"
            android:text="다음"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />


</RelativeLayout>










</RelativeLayout>