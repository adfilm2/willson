<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/relative">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141.1dp"
            android:background="@color/white">

        <include
            android:id="@+id/activity_list1_toolbar"
            layout="@layout/toolbar_list"/>


                <ProgressBar
                    android:id="@+id/toolbar_list_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6.7dp"
                    android:layout_marginTop="85.4dp"
                    android:progressDrawable="@drawable/list_progressbar"
                    android:max="100"
                    android:progress="37"
                    android:progressTint="@color/lightPurple" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/darkPurple"
            android:lineSpacingExtra="21sp"
            android:gravity="center_horizontal"
            android:text="37%" />
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="54.3dp"
            android:layout_marginLeft="21dp"
            android:textColor="#2c2c4d"
            android:lineSpacingExtra="10sp"
            android:layout_marginBottom="18.9dp"
            android:text="구체적으로 어떤 내용인가요??"
            android:padding="11.4dp"
            />
            -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/list4_linear"
                    android:layout_height="244.8dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="54.3dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_radius5">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/list4_relative"
                            android:layout_marginLeft="10.5dp"
                            android:layout_marginTop="14.5dp"
                            android:layout_marginRight="10.5dp"
                            >
                                <EditText
                                    android:id="@+id/list4_edittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:gravity="left"
                                    android:hint="ex) 연애에 있어서 다양한 고민이 복잡하게 얽혀있어 머릿속이 복잡해요. ">
                                </EditText>
                        </ScrollView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/list4_relative"
                            >

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="11sp"
                    android:text="0"
                    android:id="@+id/textViewCount"
                    android:layout_toLeftOf ="@id/list4_totalbyte"

                    android:layout_alignBottom="@id/list4_totalbyte"/>

                                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/300자"
                    android:layout_alignParentRight="true"
                    android:id="@+id/list4_totalbyte"



                    />
                </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <Button
                    android:id="@+id/list4_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="46.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="31.7dp"
                    android:layout_marginBottom="32.6dp"
                    android:background="@drawable/next_btn_darkpurple"
                    android:enabled="false"
                    android:text="다음"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />


                                </RelativeLayout>
                        </RelativeLayout>
                </LinearLayout>
        </RelativeLayout>
</RelativeLayout>