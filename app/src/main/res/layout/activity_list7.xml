                    android:text="4" />

                <RadioButton
                    android:id="@+id/list7_btn15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5" />

            </RadioGroup>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/dark_purple"
                android:lineSpacingExtra="13sp"
                android:text="정서적 지지"
                android:layout_marginTop="48.5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/middlepurple"
                android:lineSpacingExtra="9sp"
                android:text="제 얘기에 대한 공감과 위로로 감정을 해소하고 싶습니다."
                />

            <RadioGroup
                android:id="@+id/list7_radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_marginTop="40.4dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/list7_btn21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1" />

