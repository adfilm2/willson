<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical"
    android:layout_width="310.1dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25.6dp"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:layout_width="91dp"
                android:layout_height="80dp"
                android:id="@+id/list_pop_image"
                android:layout_gravity="center"
                android:src="@drawable/list_img_alert_willson"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/dark_purple"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="정말 그만두시겠어요?\n아직 하나도 작성하시지 않으셨어요!"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="13.9dp"
                android:id="@+id/list_pop_textview"
                />

            <Button
                android:layout_gravity="center"
                android:layout_width="159.5dp"
                android:layout_height="39.2dp"
                android:id="@+id/list_pop_keepbtn"
                android:text="계속 작성하기"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_darkblue"
                android:textSize="18sp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/brownish_grey"
                android:layout_gravity="center"
                android:text="그만하기"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20.7dp"
                android:id="@+id/list_pop_exitbtn"
                />

        </LinearLayout>
</LinearLayout>