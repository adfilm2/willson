<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/activity_list1_toolbar"
        layout="@layout/toolbar_list"/>

    <ProgressBar
        android:id="@+id/toolbar_list_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6.7dp"
        android:progressDrawable="@drawable/list_progressbar"
        android:max="100"
        android:progress="30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/list_progress_shadow"
        android:layout_marginBottom="6.5dp">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/darkPurple"
        android:lineSpacingExtra="21sp"
        android:gravity="center_horizontal"
        android:text="30%"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21.1dp"
        android:layout_marginRight="21.1dp"
        android:orientation="vertical">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54.9dp"
            android:lineSpacingExtra="11sp"
            android:text="일상에 얼마나 많은 영향을 주고 있나요?"
            android:textColor="#2c2c4d"
            android:textSize="19sp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.4dp"
            android:lineSpacingExtra="15sp"
            android:text="영향이 클수록 큰 숫자를 골라주세요"
            android:textColor="#616161"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49.4dp"
        android:layout_weight="1">
        <include layout="@layout/radio_btn"/>
    </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="46.1dp"
            android:id="@+id/list3_btn1"
            android:text="다음"
            android:enabled="false"
            android:textColor="#ffffff"
            android:layout_marginLeft="31.7dp"
            android:layout_marginRight="31.7dp"
            android:background="@drawable/listnext_btn_selector"
            android:layout_marginBottom="32.6dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

    </LinearLayout>


