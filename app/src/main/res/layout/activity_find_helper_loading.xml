<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="52.8dp"
        android:layout_marginBottom="20.7dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="받은요청"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="105.3dp"
            android:textAlignment="center"
            android:text="당신을 도와줄 헬퍼들을\n모으는 중이에요!"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="58.9dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6.4dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_timer"/>

            <TextView
                android:id="@+id/count_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00"
                android:textSize="14sp"
                android:textColor="@color/middleBlue"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />

    </LinearLayout>

    <ImageView
        android:id="@+id/loading_moving_willson"
        android:layout_width="137.94dp"
        android:layout_height="121dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/helper_lookfor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:textSize="16sp"
        android:textColor="@color/dark_blue"
        android:layout_gravity="center"
        android:layout_marginTop="23.5dp"
        android:textAlignment="center"
        android:text="당신에게 도움 줄 헬퍼들을 찾고있어요! \n다 찾고 나면 알림을 보내드릴게요"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_r"
        />

</LinearLayout>