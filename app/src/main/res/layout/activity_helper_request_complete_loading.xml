<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="58.3dp"
        android:layout_height="61dp"
        android:src="@drawable/img_loading"
        android:layout_marginTop="226.5dp"
        android:layout_marginBottom="62.6dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청이 완료되었습니다!"
        android:textSize="21sp"
        android:textColor="@color/dark_purple"
        android:lineSpacingExtra="11sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_b"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15분 내에 응답이 없을 경우,\n자동으로 취소됩니다."
        android:textSize="16sp"
        android:textColor="@color/darkPurple"
        android:lineSpacingExtra="10sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="46.4dp"
        android:textStyle="normal"
        android:fontFamily="@font/nanum_square_r"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/its_shadow"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@drawable/gradient_btn_color"
            android:text="시작하기"
            android:paddingTop="14.6dp"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/list1_course_start_btn"
            android:elevation="9dp"
            />
    </LinearLayout>

</LinearLayout>