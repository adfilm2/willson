<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/activity_list1_toolbar"
        layout="@layout/toolbar_list"/>

    <ProgressBar
        android:id="@+id/toolbar_list_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6.7dp"
        android:progressDrawable="@drawable/list_progressbar"
        android:max="100"
        android:progress="50"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/list_progress_shadow">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/darkPurple"
        android:lineSpacingExtra="21sp"
        android:gravity="center_horizontal"
        android:text="50%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="21.1dp"
        android:layout_marginRight="21.1dp"
        android:layout_marginTop="34.5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="원하는 헬퍼는 어떤 분인가요? (1/2)"
            android:textColor="@color/darkPurple"
            android:textSize="19sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/darkPurple"
            android:textSize="17dp"
            android:text="성별"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="fill_horizontal">
                <RadioButton
                    android:layout_width="96dp"
                   android:layout_height="34.6dp"
                    android:button="@color/trans"
                    android:textAlignment="center"
                    android:text="남자"
                    android:textColor="@color/lightPurple"
                    android:checked="false"
                    android:background="@drawable/sex_btn_selector"/>
                <RadioButton
                    android:layout_width="96dp"
                    android:layout_height="34.6dp"
                    android:button="@color/trans"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="남자"
                    android:textColor="@color/lightPurple"
                    android:checked="false"
                    android:background="@drawable/sex_btn_selector"/>
                <RadioButton
                    android:layout_width="96dp"
                    android:layout_height="34.6dp"
                    android:button="@color/trans"
                    android:textAlignment="center"
                    android:layout_gravity="right"
                    android:text="남자"
                    android:textColor="@color/lightPurple"
                    android:checked="false"
                    android:background="@drawable/sex_btn_selector"/>


            </RadioGroup>


    </LinearLayout>


</LinearLayout>