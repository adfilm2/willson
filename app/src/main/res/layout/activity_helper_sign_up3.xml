<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout = "@layout/toolbar_helper_signup"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한줄 소개를 작성해주세요."
        android:textColor="@color/darkPurple"
        android:textSize="19sp"
        android:layout_marginLeft="22.1dp"
        android:layout_marginTop="45.6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="115dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="28.6dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_radius5">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="60"
                android:background="@null"
                android:gravity="left"
                android:paddingLeft="10.5dp"
                android:paddingRight="9.4dp"
                android:paddingTop="14.5dp"
                android:textSize="14sp"
                android:hint="ex) 어려서부터 저는... ">
            </EditText>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/list4_relative" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="11sp"
                android:text="0"
                android:id="@+id/textViewCount"
                android:layout_toLeftOf ="@id/list4_totalbyte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/60자"
                android:id="@+id/list4_totalbyte"
                android:layout_marginRight="21dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="46.1dp"
            android:layout_marginHorizontal="31.7dp"
            android:layout_marginBottom="32.6dp"
            android:enabled="false"
            android:background="@drawable/listnext_btn_selector"
            android:text="다음"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>