<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff">

    <include
        android:id="@+id/signup_toolbar"
        layout="@layout/toolbar_list_helper"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="31.7dp"
            android:layout_marginRight="31.7dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:scrollbars="vertical"
            android:id="@+id/background_id"
            >

            f<LinearLayout
                android:id="@+id/id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25.9dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textSize="15sp"
                    android:textColor="@color/middlepurple"
                    android:layout_marginBottom="2.5dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="38.4dp"
                    android:layout_marginBottom="21dp"
                    android:paddingLeft="10.6dp"
                    android:textSize="13sp"
                    android:background="@drawable/login_edittext_grey"
                    android:hint="example@willson.com"
                    android:id="@+id/registerasker_email"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.5dp"
                    android:text="비밀번호"
                    android:textSize="15sp"
                    android:textColor="@color/middlepurple"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="38.4dp"
                    android:layout_marginBottom="21dp"
                    android:paddingLeft="10.6dp"
                    android:textSize="13sp"
                    android:background="@drawable/login_edittext_grey"
                    android:hint="6자리 이상 숫자, 문자 조합"
                    android:inputType="textPassword"
                    android:id="@+id/registerasker_password"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textSize="15sp"
                    android:layout_marginBottom="2.5dp"
                    android:textColor="@color/middlepurple"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="38.4dp"
                    android:paddingLeft="10.6dp"
                    android:textSize="13sp"
                    android:background="@drawable/login_edittext_grey"
                    android:hint="6자리 이상 숫자, 문자 조합"
                    android:inputType="textPassword"
                    android:id="@+id/registerasker_passwordConfirm"
                    />
                <TextView
                    android:id="@+id/registerasker_passwordConfirm_Msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="15sp"
                    android:layout_marginBottom="2.5dp"
                    android:textColor="@color/middlepurple"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="38.4dp"
                    android:layout_marginBottom="21dp"
                    android:paddingLeft="10.6dp"
                    android:textSize="13sp"
                    android:background="@drawable/login_edittext_grey"
                    android:hint="8자이내의 닉네임을 입력해주세요."
                    android:id="@+id/registerasker_nickName"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="성별"
                    android:textSize="15sp"
                    android:textColor="@color/middlepurple"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerasker_gender"
                    android:layout_marginBottom="21.9dp"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="여성"
                        android:textColor="@color/lightPurple"
                        android:buttonTint="#5252A1"
                        android:checked="true"
                        android:id="@+id/Gender_woman"
                        android:textStyle="normal"
                        android:fontFamily="@font/nanum_square_r"
                        />
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="남성"
                        android:textColor="@color/lightPurple"
                        android:buttonTint="#5252A1"
                        android:id="@+id/Gender_man"
                        android:textStyle="normal"
                        android:fontFamily="@font/nanum_square_r"
                        />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.5dp"
                    android:text="나이"
                    android:textSize="15sp"
                    android:textColor="@color/middlepurple"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_r"
                    />

                <Spinner
                    android:id="@+id/registerasker_age"
                    android:layout_width="match_parent"
                    android:layout_height="38.3dp"
                    android:layout_marginBottom="38.8dp"
                    android:textSize="13dp"
                    android:background="@drawable/register_spinner"
                    android:dropDownVerticalOffset="9.6dp"
                    android:popupBackground="@drawable/register_spinner"
                    android:dropDownHeight="50dp"
                    />
                <!--android:paddingLeft="10.6dp"-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="22.1dp"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerasker_checkBox"
                    android:checked="false"
                    android:layout_marginRight="8.6dp"
                    android:button="@drawable/register_checkbox_btn"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerasker_checkBox_text"
                    android:text="윌슨의 이용약관 및 개인정보취급방침에 동의합니다."
                    android:textSize="11sp"
                    android:textColor="@color/grey"
                    android:textStyle="normal"
                    android:fontFamily="@font/nanum_square_b"
                    />
            </LinearLayout>


           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37.4dp"
                >
                <Button
                    android:id="@+id/registerasker_registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/register_button_gradient"
                    android:gravity="center"
                    android:text="다음"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:enabled="true"
                    android:testStyle="normal"
                    android:fontFamily="@font/nanum_square_b"
                    />

            </LinearLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/registerasker_registerButton"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="46.1dp"
                    android:layout_marginBottom="32.6dp"
                    android:enabled="false"
                    android:background="@drawable/listnext_btn_selector"
                    android:text="다음"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"

                    android:fontFamily="@font/nanum_square_b"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>