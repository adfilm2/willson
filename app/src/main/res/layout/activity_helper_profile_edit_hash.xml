<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/list_background">

    <include
        android:id="@+id/activity_list1_toolbar"
        layout="@layout/toolbar_helper_profile"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_weight="1"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/dark_purple"
            android:lineSpacingExtra="11sp"
            android:text="자신을 나타내는 해시태그를 추가해보세요."
            android:layout_marginLeft="21dp"
            android:layout_marginTop="54.9dp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_b"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30.7dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:id="@+id/linear1"
            android:background="@drawable/rounded_corner_radius5"
            android:layout_marginTop="55dp"
            >

            <TextView
                android:layout_width="28.8dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/lightPurple"
                android:layout_marginLeft="10dp"
                android:text="#"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />

            <EditText
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30.7dp"
                android:id="@+id/editText1"
                android:background="@color/trans"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="@color/lightPurple"
                android:textColorHint="@color/grey"
                android:hint="태그 입력"
                android:textStyle="normal"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/nanum_square_r"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30.7dp"
            android:layout_marginLeft="21dp"
            android:id="@+id/linear2"
            android:layout_marginRight="21dp"
            android:background="@drawable/rounded_corner_radius5"
            android:layout_marginTop="8.4dp"
            >

            <TextView
                android:layout_width="28.8dp"
                android:layout_height="match_parent"
                android:textColor="@color/lightPurple"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="#"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />

            <EditText
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30.7dp"
                android:id="@+id/editText2"
                android:singleLine="true"
                android:background="@color/trans"
                android:textSize="15sp"
                android:textColor="@color/lightPurple"
                android:textColorHint="@color/grey"
                android:hint="태그 입력"
                android:textStyle="normal"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/nanum_square_r"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30.7dp"
            android:id="@+id/linear3"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/rounded_corner_radius5"
            android:layout_marginTop="8.4dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="28.8dp"
                android:layout_height="match_parent"
                android:textColor="@color/lightPurple"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="#"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="@font/nanum_square_b"
                />

            <EditText
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30.7dp"
                android:id="@+id/editText3"
                android:singleLine="true"
                android:background="@color/trans"
                android:textSize="15sp"
                android:textColor="@color/lightPurple"
                android:textColorHint="@color/grey"
                android:hint="태그 입력"
                android:textStyle="normal"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/nanum_square_r">
            </EditText>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brownish_grey"
            android:layout_marginLeft="21.1dp"
            android:layout_marginTop="17dp"
            android:text="ex) #이별, #다툼, #화해"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/nanum_square_r"
            />

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:id="@+id/button1"
        android:text="다음"
        android:textColor="#ffff"
        android:layout_marginHorizontal="31.7dp"
        android:background="@drawable/next_btn_darkpurple"
        android:textSize="14sp"
        android:layout_marginBottom="32.6dp"
        />

</LinearLayout>