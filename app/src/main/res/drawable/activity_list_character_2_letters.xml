<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--android:left="11dp"
    android:right="12dp"-->

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:left="9dp"
                android:right="9dp"
                android:top="6dp"
                android:bottom="6dp"/>
            <stroke
                android:width = "1dp"
                android:color = "@color/lightBlue"/>
            <solid
                android:color="@color/lightBlue"/>
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:left="9dp"
                android:right="9dp"
                android:top="6dp"
                android:bottom="6dp"/>
            <solid android:color="@color/trans"/>
            <stroke
                android:width = "1dp"
                android:color = "@color/lightBlue"/>
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>