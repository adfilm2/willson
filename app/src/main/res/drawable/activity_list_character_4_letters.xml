<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:left="8.2dp"
                android:right="8.2dp"
                android:top="6.7dp"
                android:bottom="6dp"/>
            <solid
                android:color="@color/lightPurple"/>
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:left="8.2dp"
                android:right="8.2dp"
                android:top="6.7dp"
                android:bottom="6dp"/>
            <solid android:color="@color/trans"/>
            <stroke
                android:width = "1dp"
                android:color = "@color/lightPurple"/>
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>