<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
    <layer-list>

        <item>
            <shape>
                <solid android:color="#29000000"/>

                <corners android:radius="5dp"/>
                <gradient
                    android:angle="90"
                    android:startColor="#08000000"
                    android:endColor="#E8000000"/>
            </shape>
        </item>

        <item >

        <shape android:shape="rectangle">
            <solid
                android:color="@color/lightPurple"/>
            <corners
                android:radius="5dp"
                />
            <gradient
                android:startColor="@color/buttonLeft"
                android:endColor="@color/buttonRignt"
                android:angle="0"/>
        </shape>
        </item>

    </layer-list>



    </item>



    <item android:state_enabled="false">
        <layer-list>

            <item>
                <shape>
                    <solid android:color="#29000000"/>

                    <corners android:radius="19dp"/>
                </shape>
            </item>

            <item android:bottom="5dp">

                <shape android:shape="rectangle">
                    <solid
                        android:color="@color/ggrey"/>
                    <corners
                        android:radius="5dp"
                        />

                </shape>
            </item>

        </layer-list>
    </item>
</selector>