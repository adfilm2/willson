<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#2c2c4d</item>
        <item name="android:colorControlNormal">#B4B4B4</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="RatingBarColor" parent="Theme.AppCompat" >
        <item name="colorAccent">#FFE641</item>
        <item name="android:colorControlNormal">#C8C8C8</item>
    </style>


    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#4f4f9f</item>
        <item name="colorControlNormal">#4f4f9f</item>
    </style>

    <style name="list1_edit_color" parent="Theme.AppCompat" >
        <item name="colorPrimary">#ffffff</item>
    </style>

    <style name="Divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Divider1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
